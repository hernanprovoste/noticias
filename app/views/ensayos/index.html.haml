.container
  .col-md-12.no-padding
    .imagenes-page
      %h1 Publicaciones y Ensayos

    .col-md-12
      .row
        - @ensayos.each do |ensayo|
          .col-md-6
            .body-ensayos
              %h1= link_to ensayo.titlo, "../#{ensayo.pdf}"
              %h3= ensayo.autor
              %h3= ensayo.created_at.to_formatted_s(:short)

    .col-md-12
      %nav
        %ul.pagination
          %li
            %a{"aria-label" => "Previous"}
              %span{"aria-hidden" => "true"} «
          %li
            %a 1
          %li
            %a 2
          %li
            %a 3
          %li
            %a 4
          %li
            %a 5
          %li
            %a{"aria-label" => "Next"}
              %span{"aria-hidden" => "true"} »
