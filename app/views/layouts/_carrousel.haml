#myCarousel.carousel.slide{"data-ride" => "carousel"}
  / Wrapper for slides
  .carousel-inner{:role => "listbox"}
    - @notices.each_with_index do |noticia, index|
      - if index.zero?
        .item.active
          = image_tag(noticia.image.url, class: "img-responsive")
          .container
            .carousel-caption
              %h3=link_to noticia.title, noticia
      - else
        .item
          = image_tag(noticia.image.url, class: "img-responsive")
          .container
            .carousel-caption
              %h3=link_to noticia.title, noticia
    / Left and right controls
    %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
      %span.fa.fa-angle-left{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
      %span.fa.fa-angle-right{"aria-hidden" => "true"}
      %span.sr-only Next
