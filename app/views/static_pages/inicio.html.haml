%section
  .container
    .row
      .col-md-8
        #carousel-1.carousel.slide{"data-ride" => "carousel"}
          .carousel-inner{:role => "listbox"}
            - @notices.each_with_index do |noticia, index|
              - if index.zero?
                .item.active
                  = image_tag(noticia.image.url, class: "img-responsive")
                  %h1=link_to noticia.title, noticia
              - else
                .item
                  = image_tag(noticia.image.url, class: "img-responsive")
                  %h1=link_to noticia.title, noticia

              %div
                %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-1", :role => "button"}
                  %i.glyphicon.glyphicon-chevron-left
                  %span.sr-only Previous
                %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-1", :role => "button"}
                  %i.glyphicon.glyphicon-chevron-right
                  %span.sr-only Next
              %ol.carousel-indicators
                %li.active{"data-slide-to" => "0", "data-target" => "#carousel-1"}
                %li{"data-slide-to" => "1", "data-target" => "#carousel-1"}
                %li{"data-slide-to" => "2", "data-target" => "#carousel-1"}
      .col-md-4
        .imagenes-zoom-container
          .zoom-container
            %a{:href => "#"}
              %span.zoom-caption
                %small imagenes
              %img{:src => "../assets/DSC00918.JPG"}/
        .podcast
          .audio-podcast
            %audio.control-audio-podcast{:controls => "", :preload => "none"}
              %source{:src => "{$base_url}audio/pitbull.mp3", :type => "audio/mpeg"}
