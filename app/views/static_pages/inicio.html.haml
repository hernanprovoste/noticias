%section
  .container
    .row
      .col-md-4
        .secciones
          .titulo
            %h1 Noticias
          .item-secciones-noticias
            - if @notices4.size.zero?
              %p No se encuentran noticias
            - else
              - @notices4.each do |notice|
                %ul
                  %li
                    = image_tag(notice.image.url, class: "img-responsive")
                    %h3=link_to notice.title, notice
                    %p=link_to notice.subtitle, notice

          .ver-mas-botton
            %h3= link_to '.:: ver más ::.', notices_path
      .col-md-4
        .secciones
          .titulo
            %h1 Opiniones
          .item-secciones
            - if @opinions.size.zero?
              %p No se encuentran opiniones
            - else
              - @opinions.each do |opinion|
                %ul
                  %li
                    %h3= link_to opinion.title, opinion
                    %h5= link_to opinion.autor, opinion
          .ver-mas-botton
            %h3= link_to '.:: ver más ::.', opinions_path
      .col-md-4
        .secciones
          .titulo
            %h1 Publicaciones y Ensayos
          .item-secciones
            - if @ensayos.size.zero?
              %p No se encuentran ensayos
            - else
              - @ensayos.each do |ensayo|
                %ul
                  %li
                    %h3= link_to ensayo.titlo, "#{ensayo.pdf}"
                    %h5= link_to ensayo.autor, "#{ensayo.pdf}"
                    %h5= link_to ensayo.created_at.to_formatted_s(:short), "#{ensayo.pdf}"
          .ver-mas-botton
            %h3= link_to '.:: ver más ::.', ensayos_path
