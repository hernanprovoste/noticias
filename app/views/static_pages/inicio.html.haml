%section
  .container
    .row
      .col-md-8
        #carousel-1.carousel.slide{"data-ride" => "carousel"}
          .carousel-inner{:role => "listbox"}
            - @notices.each_with_index do |noticia, index|
              - if index.zero?
                .item.active
                  = image_tag(noticia.image.url, class: "img-responsive")
                  %h1=link_to noticia.title, noticia
              - else
                .item
                  = image_tag(noticia.image.url, class: "img-responsive")
                  %h1=link_to noticia.title, noticia

              %div
                %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-1", :role => "button"}
                  %i.glyphicon.glyphicon-chevron-left
                  %span.sr-only Previous
                %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-1", :role => "button"}
                  %i.glyphicon.glyphicon-chevron-right
                  %span.sr-only Next
              %ol.carousel-indicators
                %li.active{"data-slide-to" => "0", "data-target" => "#carousel-1"}
                %li{"data-slide-to" => "1", "data-target" => "#carousel-1"}
                %li{"data-slide-to" => "2", "data-target" => "#carousel-1"}
      .col-md-4
        - if @fotos.size.zero?
          .imagenes-zoom-container.hidden
        - else
          - @fotos.each do |foto|
            .imagenes-zoom-container
              .zoom-container
                %span.zoom-caption
                  %small= link_to 'imagenes de la semana', fotos_path
                = image_tag(foto.imagen.url)
            #hoy-content.imagen-hoy-content
              %h1= foto.title
              %p= foto.subtitle
        .podcast.hidden
          .audio-podcast
            %audio.control-audio-podcast{:controls => "", :preload => "none"}
              %source{:src => "{$base_url}audio/pitbull.mp3", :type => "audio/mpeg"}
                %source{:src => "{$base_url}audio/music.ogg", :type => "audio/ogg"}
          .letras-podcast
            %h3 Entrevista de la Semana
            %p Entrevista a María Ines de los Andes, Jefa de Recursos Humanos de Buenaventura Corporations.
        .ver-mas-botton.hidden
          %a{:href => "#"}
            %h3 .:: ver más ::.

